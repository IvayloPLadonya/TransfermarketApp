@* Index.cshtml *@
@model IEnumerable<TransfermarketApp.ViewModels.Transfers.TransferViewModel>
@{
    ViewData["Title"] = "Transfers";
    var isAdmin = User.IsInRole("Admin");
    var filter = ViewBag.Filter as TransfermarketApp.ViewModels.Transfers.TransferFilterViewModel;
}

<section class="container mt-5">
    <h1 class="mb-4">Transfers</h1>

    <form method="get" class="row g-3 mb-4">
        <div class="col-md-3">
            <input type="text" name="playerName" value="@filter?.PlayerName" class="form-control" placeholder="Player name" />
        </div>
        <div class="col-md-3">
            <input type="text" name="clubName" value="@filter?.ClubName" class="form-control" placeholder="Club name" />
        </div>
        <div class="col-md-2">
            <input type="date" name="fromDate" value="@filter?.FromDate?.ToString("yyyy-MM-dd")" class="form-control" />
        </div>
        <div class="col-md-2">
            <input type="date" name="toDate" value="@filter?.ToDate?.ToString("yyyy-MM-dd")" class="form-control" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </form>

    @if (isAdmin)
    {
        <a asp-action="Create" class="btn btn-success mb-3">Add New Transfer</a>
    }

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Player</th>
                <th>From</th>
                <th>To</th>
                <th>Fee</th>
                <th>Date</th>
                @if (isAdmin)
                    {
                <th>Actions</th>
                    }
            </tr>
        </thead>
        <tbody>
            @foreach (var transfer in Model)
            {
                <tr>
                    <td>@transfer.PlayerName</td>
                    <td>@transfer.FromClubName</td>
                    <td>@transfer.ToClubName</td>
                    <td>€@transfer.TransferFee.ToString("N0")</td>
                    <td>@transfer.TransferDate.ToShortDateString()</td>
                    <td>
                        @if (isAdmin)
                        {
                            <a asp-action="Edit" asp-route-id="@transfer.TransferId" class="btn btn-sm btn-warning">Edit</a>
                            <form asp-action="Delete" asp-route-id="@transfer.TransferId" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this transfer?');">Delete</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mt-4">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <form method="get" class="d-inline">
                            <input type="hidden" name="page" value="@i" />
                            <input type="hidden" name="playerName" value="@filter?.PlayerName" />
                            <input type="hidden" name="clubName" value="@filter?.ClubName" />
                            <input type="hidden" name="fromDate" value="@filter?.FromDate?.ToString("yyyy-MM-dd")" />
                            <input type="hidden" name="toDate" value="@filter?.ToDate?.ToString("yyyy-MM-dd")" />
                            <button type="submit" class="page-link">@i</button>
                        </form>
                    </li>
                }
            </ul>
        </nav>
    }
</section>
