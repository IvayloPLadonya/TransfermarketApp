@model TransfermarketApp.ViewModels.Clubs.CreateClubViewModel

@{
    ViewData["Title"] = "Create Club";
}

<section class="login-hero">
    <div class="login-box">
        <h1 class="mb-4">Add New Club</h1>

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FoundedYear" class="form-label"></label>
                <input asp-for="FoundedYear" class="form-control" type="number" />
                <span asp-validation-for="FoundedYear" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Budget" class="form-label"></label>
                <input asp-for="Budget" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Budget" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LeagueId" class="form-label">League</label>
                <select asp-for="LeagueId" class="form-select">
                    <option value="">-- Select League --</option>
                    @foreach (var league in Model.Leagues)
                    {
                        <option value="@league.Id">@league.Name</option>
                    }
                </select>
                <span asp-validation-for="LeagueId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-custom w-100">Create Club</button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
