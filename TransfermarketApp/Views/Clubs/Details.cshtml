@model TransfermarketApp.ViewModels.Clubs.ClubDetailsViewModel

@{
    ViewData["Title"] = $"{Model.Name} Details";
}

<section class="container mt-5">
    <div class="club-header d-flex align-items-center mb-4">
        <div class="club-logo-wrapper">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" class="club-logo club-logo-large" />
            }
        </div>
        <div class="ms-4">
            <h1>@Model.Name</h1>
            <p><strong>Founded:</strong> @Model.FoundedYear</p>
            <p><strong>Budget:</strong> $@Model.Budget.ToString("N0")</p>
            <p><strong>League:</strong> @Model.LeagueName</p>
        </div>
    </div>


    <div class="mb-4">
        <h2 class="mb-3">Players</h2>

        <div class="list-group">
            @foreach (var player in Model.Players)
            {
                <div class="list-group-item d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        @if (!string.IsNullOrEmpty(player.ImageUrl))
                        {
                            <img src="@player.ImageUrl"
                                 alt="@player.Name"
                                 class="player-photo me-3" />
                        }
                        else
                        {
                            <img src="/images/placeholder-player.png"
                                 alt="No Image"
                                 class="player-photo me-3" />
                        }

                        <div>
                            <h5 class="mb-1">@player.Name</h5>
                            <p class="mb-0">
                                <strong>Position:</strong> @player.Position |
                                <strong>Age:</strong> @player.Age |
                                <strong>Market Value:</strong> $@player.MarketValue.ToString("N0")
                            </p>
                        </div>
                    </div>

                    <a asp-controller="Players"
                       asp-action="Details"
                       asp-route-id="@player.Id"
                       class="btn btn-primary btn-sm">
                        Details
                    </a>
                </div>
            }
        </div>
    </div>



    <div class="mb-4">
        <h2 class="mb-3">Incoming Transfers</h2>
        <table class="table table-striped table-hover table-bordered table-light">
            <thead class="table-dark">
                <tr>
                    <th>Player</th>
                    <th>From Club</th>
                    <th>Fee</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transfer in Model.IncomingTransfers)
                {
                    <tr>
                        <td>@transfer.PlayerName</td>
                        <td>@transfer.FromClubName</td>
                        <td>$@transfer.Fee</td>
                        <td>@transfer.TransferDate.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mb-4">
        <h2 class="mb-3">Outgoing Transfers</h2>
        <table class="table table-striped table-hover table-bordered table-light">
            <thead class="table-dark">
                <tr>
                    <th>Player</th>
                    <th>To Club</th>
                    <th>Fee</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transfer in Model.OutgoingTransfers)
                {
                    <tr>
                        <td>@transfer.PlayerName</td>
                        <td>@transfer.ToClubName</td>
                        <td>$@transfer.Fee</td>
                        <td>@transfer.TransferDate.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

