@using TransfermarketApp.ViewModels.Clubs
@model IEnumerable<ClubListViewModel>

@{
    ViewData["Title"] = "Clubs";
    var isAdmin = User.IsInRole("Admin");
}

<section class="container mt-5">
    <h1 class="mb-4">Clubs</h1>

    <form method="get" class="input-group mb-4">
        <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Search clubs..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    @if (isAdmin)
    {
        <a asp-action="Create" class="btn btn-success mb-3">Add New Club</a>
    }

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Founded</th>
                <th>Budget</th>
                <th>League</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var club in Model)
            {
                <tr>
                    <td class="text-center">
                        @if (!string.IsNullOrEmpty(club.ImageUrl))
                        {
                            <img src="@club.ImageUrl" alt="@club.Name" class="club-logo-list d-block mx-auto" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </td>
                    <td>@club.Name</td>
                    <td>@club.FoundedYear</td>
                    <td>€@club.Budget.ToString("N0")</td>
                    <td>@club.LeagueName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@club.ClubId" class="btn btn-sm btn-info">Details</a>
                        @if (isAdmin)
                        {
                            <a asp-action="Edit" asp-route-id="@club.ClubId" class="btn btn-sm btn-warning">Edit</a>
                            <form asp-action="Delete" asp-route-id="@club.ClubId" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this club?');">Delete</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (ViewBag.TotalPages != null && (int)ViewBag.TotalPages > 1)
    {
        <nav aria-label="Clubs pagination">
            <ul class="pagination">
                @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-searchTerm="@ViewBag.SearchTerm">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }

</section>
