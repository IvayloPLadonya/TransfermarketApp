@model TransfermarketApp.ViewModels.Players.EditPlayerViewModel

@{
    ViewData["Title"] = "Edit Player";
}

<h1>Edit Player</h1>

<div class="container mt-4" style="max-width: 600px;">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="PlayerId" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Position" class="form-label">Position</label>
            <select asp-for="Position" class="form-select">
                @foreach (var position in Enum.GetValues(typeof(TransfermarketApp.Data.Models.Enums.Position)))
                {
                    <option value="@position" selected="@(position.Equals(Model.Position) ? "selected" : null)">
                        @position
                    </option>
                }
            </select>
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Age" class="form-label">Age</label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MarketValue" class="form-label">Market Value</label>
            <input asp-for="MarketValue" class="form-control" />
            <span asp-validation-for="MarketValue" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">Image URL</label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CurrentClubId" class="form-label">Current Club</label>
            <select name="CurrentClubId" id="CurrentClubId" class="form-select">
                <option value="">-- Select a Club --</option>
                @foreach (var club in Model.Clubs)
                {
                    <option value="@club.Id" selected="@(club.Id == Model.CurrentClubId ? "selected" : null)">
                        @club.Name
                    </option>
                }
            </select>
            <span asp-validation-for="CurrentClubId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
