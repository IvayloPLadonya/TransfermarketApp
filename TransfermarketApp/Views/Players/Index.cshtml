@using TransfermarketApp.ViewModels.Players
@model IEnumerable<PlayerListViewModel>
@{
    var filter = ViewBag.Filter as TransfermarketApp.ViewModels.Players.PlayerFilterViewModel;
    var isAdmin = User.IsInRole("Admin");
}

<section class="container mt-5">
    <h1 class="mb-4">Players</h1>

    <form method="get" class="row g-3 mb-4">
        <div class="col-md-3">
            <input type="text" name="SearchTerm" value="@filter?.SearchTerm" class="form-control" placeholder="Search players..." />
        </div>

        <div class="col-md-3">
            <select name="ClubId" class="form-select">
                <option value="">All Clubs</option>
                @foreach (var club in filter?.Clubs ?? new List<ClubDropdownViewModel>())
                {
                    <option value="@club.Id" selected="@(filter?.ClubId == club.Id ? "selected" : null)">@club.Name</option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <select name="Position" class="form-select">
                <option value="">All Positions</option>
                @foreach (var pos in Enum.GetValues(typeof(TransfermarketApp.Data.Models.Enums.Position)))
                {
                    var posValue = (int)pos;
                    <option value="@posValue" selected="@(filter?.Position == (TransfermarketApp.Data.Models.Enums.Position)pos ? "selected" : null)">
                        @pos
                    </option>
                }
            </select>
        </div>

        <div class="col-md-1">
            <input type="number" name="Age" value="@(filter?.Age?.ToString() ?? "")" class="form-control" placeholder="Age" />
        </div>

        <div class="col-md-2">
            <select name="SortOrder" class="form-select">
                <option value="">Sort by Value</option>
                <option value="value_asc" selected="@(filter?.SortOrder == "value_asc" ? "selected" : null)">Value ↑</option>
                <option value="value_desc" selected="@(filter?.SortOrder == "value_desc" ? "selected" : null)">Value ↓</option>
            </select>
        </div>

        <div class="col-md-1">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </form>

    @if (isAdmin)
    {
        <a asp-action="Create" class="btn btn-success mb-3">Add New Player</a>
    }

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Position</th>
                <th>Age</th>
                <th>Market Value</th>
                <th>Current Club</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var player in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(player.ImageUrl))
                        {
                            <img src="@player.ImageUrl" alt="@player.Name" width="50" height="50" class="img-thumbnail" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </td>
                    <td>@player.Name</td>
                    <td>@player.Position</td>
                    <td>@player.Age</td>
                    <td>€@player.MarketValue.ToString("N0")</td>
                    <td>@player.CurrentClubName</td>
                    <td>
                        @if (isAdmin)
                        {
                            <a asp-action="Edit" asp-route-id="@player.PlayerId" class="btn btn-sm btn-warning">Edit</a>
                        }
                        <a asp-action="Details" asp-route-id="@player.PlayerId" class="btn btn-sm btn-info">Details</a>
                        @if (isAdmin)
                        {
                            <form asp-action="Delete" asp-route-id="@player.PlayerId" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this player?');">Delete</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Players pagination">
        <ul class="pagination">
            @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-SearchTerm="@filter?.SearchTerm"
                       asp-route-ClubId="@filter?.ClubId"
                       asp-route-Position="@((int?)filter?.Position)"
                       asp-route-Age="@filter?.Age"
                       asp-route-SortOrder="@filter?.SortOrder">@i</a>
                </li>
            }
        </ul>
    </nav>

</section>
