@model TransfermarketApp.ViewModels.Players.PlayerDetailsViewModel

@{
    ViewData["Title"] = $"{Model.Name} Details";
}

<section class="container mt-5">
    <div class="d-flex align-items-start mb-4">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-width: 150px; height: auto; margin-right: 20px;" />
        }

        <div>
            <h1>@Model.Name</h1>
            <p><strong>Position:</strong> @Model.Position</p>
            <p><strong>Age:</strong> @Model.Age</p>
            <p><strong>Market Value:</strong> €@Model.MarketValue.ToString("N0")</p>

            @if (!string.IsNullOrEmpty(Model.CurrentClubName))
            {
                <div class="d-flex align-items-center mt-3">
                    @if (!string.IsNullOrEmpty(Model.CurrentClubLogoUrl))
                    {
                        <img src="@Model.CurrentClubLogoUrl" alt="@Model.CurrentClubName"
                             style="height: 40px; margin-right: 10px;" />
                    }
                    <span class="fw-bold fs-5">@Model.CurrentClubName</span>
                </div>
            }
        </div>
    </div>



    <hr />

    <div class="mb-4">
        <h2>Season Stats</h2>

        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="PlayerStat" asp-action="Create" asp-route-playerId="@Model.PlayerId" class="btn btn-success mb-3">Add New Stat</a>
        }

        @if (Model.Stats.Any())
        {
            <table class="table table-striped table-hover table-bordered table-light">
                <thead class="table-dark">
                    <tr>
                        <th>Season</th>
                        <th>Club</th>
                        <th>Appearances</th>
                        <th>Goals</th>
                        <th>Assists</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th>Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var stat in Model.Stats.OrderByDescending(s => s.Season))
                    {
                        <tr>
                            <td>@stat.Season</td>
                            <td>@stat.Club</td>
                            <td>@stat.Appearances</td>
                            <td>@stat.Goals</td>
                            <td>@stat.Assists</td>
                            @if (User.IsInRole("Admin"))
                            {
                                <td>
                                    <a asp-controller="PlayerStat" asp-action="Edit" asp-route-id="@stat.StatId" class="btn btn-sm btn-primary me-1">Edit</a>
                                    <form asp-controller="PlayerStat" asp-action="Delete" asp-route-id="@stat.StatId" method="post" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this stat?');">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No stats available.</p>
        }
    </div>

    <hr />

    <div class="mb-4">
        <h2>Transfers</h2>
        @if (Model.Transfers.Any())
        {
            <table class="table table-striped table-hover table-bordered table-light">
                <thead class="table-dark">
                    <tr>
                        <th>From Club</th>
                        <th>To Club</th>
                        <th>Fee</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transfer in Model.Transfers)
                    {
                        <tr>
                            <td>@transfer.FromClubName</td>
                            <td>@transfer.ToClubName</td>
                            <td>€@transfer.TransferFee.ToString("N0")</td>
                            <td>@transfer.TransferDate.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No transfers recorded.</p>
        }
    </div>
</section>
