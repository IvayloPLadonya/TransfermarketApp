@model TransfermarketApp.ViewModels.Players.CreatePlayerViewModel

@{
    ViewData["Title"] = "Create Player";
}

<section class="login-hero">
    <div class="login-box">
        <h1 class="mb-4">Add New Player</h1>

        <form asp-action="Create" method="post">
            @* Anti-forgery token *@
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Position" class="form-label"></label>
                <select asp-for="Position" class="form-control"
                        asp-items="Html.GetEnumSelectList<TransfermarketApp.Data.Models.Enums.Position>()">
                    <option value="">-- Select Position --</option>
                </select>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Age" class="form-label"></label>
                <input asp-for="Age" class="form-control" type="number" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MarketValue" class="form-label"></label>
                <input asp-for="MarketValue" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="MarketValue" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

           <div class="mb-3">
    <label asp-for="CurrentClubId" class="form-label">Current Club</label>
    <select name="CurrentClubId" id="CurrentClubId" class="form-select">
        <option value="">-- Select Club --</option>
        @foreach (var club in Model.Clubs)
        {
                        <option value="@club.Id" selected="@(club.Id == Model.CurrentClubId ? "selected" : null)">
                            @club.Name
                        </option>

        }
    </select>
    <span asp-validation-for="CurrentClubId" class="text-danger"></span>
</div>



            <button type="submit" class="btn btn-custom w-100">Create Player</button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
